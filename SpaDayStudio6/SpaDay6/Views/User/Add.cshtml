@{
}

<form method="post" action="add">

	<div class="row mb-3">
		<label for="username" class="col-sm-1 col-form-label">Username</label>
		<div class="col-sm-4">
			<input type="text" name="username" class="form-control" value="@((ViewBag.username != null) ? ViewBag.username : "")"/>
		</div>
	</div>

	<div class="row mb-3">
		<label for="email" class="col-sm-1 col-form-label">Email</label>
		<div class="col-sm-4">
			<input type="text" name="email" class="form-control" value="@((ViewBag.email != null) ? ViewBag.email : "")" />
		</div>
	</div>

	<div class="row mb-3">
		<label for="password" class="col-sm-1 col-form-label">Password</label>
		<div class="col-sm-4">
			<input type="text" name="password" class="form-control" />
		</div>
	</div>


	@if(ViewBag.error != null)
	{
		<p>@ViewBag.error</p>
	}

	

	<div class="row mb-3">
		<label for="verify" class="col-sm-1 col-form-label">Verify Password</label>
		<div class="col-sm-4">
			<input type="text" name="verify" class="form-control" />
		</div>
	</div>

	<input type="submit" value="Create User" class="btn btn-success" />


</form>
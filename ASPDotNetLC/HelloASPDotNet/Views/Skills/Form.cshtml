@model HelloASPDotNet.Models.ViewModels.SkillsFormViewModel

@{
    ViewData["Title"] = "Form";
}

<h1>Form</h1>

<h4>SkillsFormViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">

        @using (Html.BeginForm("FormSubmit", "Skills", FormMethod.Post))
        {

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" type="date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CSharpLevel" class="control-label"></label>

                <select asp-for="CSharpLevel" class="form-control" asp-items="@(ViewData["SkillsSelectOptions"] as IEnumerable<SelectListItem>)">
                </select>

                <span asp-validation-for="CSharpLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JavaScriptLevel" class="control-label"></label>
                <select asp-for="JavaScriptLevel" class="form-control" asp-items="@(ViewData["SkillsSelectOptions"] as IEnumerable<SelectListItem>)">
                </select>
                <span asp-validation-for="JavaScriptLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JavaLevel" class="control-label"></label>
                <select asp-for="JavaLevel" class="form-control" asp-items="@(ViewData["SkillsSelectOptions"] as IEnumerable<SelectListItem>)">
                </select>
                <span asp-validation-for="JavaLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


@{

	<h1>Delete Event</h1>

	<form method="post">
	
	
		@foreach( var anEvent in ViewBag.events)
		{
			<div class="form-group">
			
			<label>
			<span>@anEvent.Name</span>
			<input type="checkbox" name="eventIds" value="@anEvent.Id" />
			</label>
			
			</div>
		}

		<input type="submit" value="Delete Selected Events" class="btn btn-danger" />
	
	</form>



}
